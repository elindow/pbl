= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  -#.field
  -#  = f.label :id
  -#  = f.text_field :id
  .field
    = f.label :page
    = f.number_field :page
  .field
    = f.label :num
    = f.number_field :num
  .field
    = f.label :qtext
    = f.text_area :qtext
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :dateChanged
    = f.date_select :dateChanged
  .actions
    = f.submit 'Save'
